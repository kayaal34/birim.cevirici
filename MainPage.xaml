<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UnitConverterApp.MainPage"
             Title="Birim Dönüştürücü"
             BackgroundColor="#0D47A1">

    <ScrollView BackgroundColor="#0D47A1">
        <VerticalStackLayout Padding="20" Spacing="20">
            
            <!-- Header -->
            <Frame Padding="20" CornerRadius="15" BackgroundColor="#1565C0" BorderColor="#0D47A1" HasShadow="True">
                <VerticalStackLayout Spacing="10">
                    <Label Text="🌍 BİRİM DÖNÜŞTÜRÜCÜ" FontSize="28" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                    <Label Text="Tüm Matematiksel Birimleri Dönüştür" FontSize="14" TextColor="#B3E5FC" HorizontalTextAlignment="Center"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Category Selection -->
            <VerticalStackLayout Spacing="10">
                <Label Text="📂 Kategori Seçin:" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                <Picker Title="Kategori seçiniz..." ItemsSource="{Binding Categories}" SelectedItem="{Binding SelectedCategory}" BackgroundColor="White" TextColor="#0D47A1" TitleColor="#0D47A1"/>
            </VerticalStackLayout>

            <!-- Conversion Type Selection -->
            <VerticalStackLayout Spacing="10">
                <Label Text="🔄 Dönüştürme Türü:" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                <Picker Title="Tür seçiniz..." ItemsSource="{Binding ConversionTypes}" SelectedItem="{Binding SelectedConversion}" BackgroundColor="White" TextColor="#0D47A1" TitleColor="#0D47A1"/>
            </VerticalStackLayout>

            <!-- Input Value -->
            <VerticalStackLayout Spacing="8">
                <Label Text="📝 Değer Girin:" FontSize="16" FontAttributes="Bold" TextColor="White"/>
                <Entry Placeholder="Sayı girin..." Text="{Binding InputValue}" Keyboard="Numeric" BackgroundColor="White" TextColor="#0D47A1" PlaceholderColor="#90CAF9" FontSize="18"/>
            </VerticalStackLayout>

            <!-- Convert Button -->
            <Button Text="🚀 DÖNÜŞTÜR" Command="{Binding ConvertCommand}" BackgroundColor="#FF6F00" TextColor="White" FontSize="18" FontAttributes="Bold" Padding="20,15" CornerRadius="10" Margin="0,10,0,0"/>

            <!-- Result Display -->
            <Frame IsVisible="{Binding HasResult}" Padding="15" CornerRadius="12" BackgroundColor="#4CAF50" BorderColor="#2E7D32" HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="✅ SONUÇ" FontSize="14" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center"/>
                    <Label Text="{Binding ResultText}" FontSize="22" FontAttributes="Bold" TextColor="White" HorizontalTextAlignment="Center" LineBreakMode="WordWrap"/>
                    <BoxView HeightRequest="1" Color="#FFF" Opacity="0.3"/>
                    <Label Text="{Binding ResultFormula}" FontSize="12" TextColor="#E8F5E9" HorizontalTextAlignment="Center" FontAttributes="Italic"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Info Section -->
            <Frame Padding="15" CornerRadius="10" BackgroundColor="#2196F3" BorderColor="#1565C0" HasShadow="True">
                <VerticalStackLayout Spacing="8">
                    <Label Text="ℹ️ BİLGİ" FontSize="14" FontAttributes="Bold" TextColor="White"/>
                    <Label Text="{Binding InfoText}" FontSize="12" TextColor="#E3F2FD" LineBreakMode="WordWrap"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Footer -->
            <Label Text="© 2026 Birim Dönüştürücü" FontSize="10" TextColor="#81D4FA" HorizontalTextAlignment="Center" Margin="0,20,0,0"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
